#actions
    %ul.actions
        %li.delete-item
            %a(href="/source/delete/#{@source.id}" title='Удалить источник исходных кодов' data-target-title="#{@source.name}")
#details
    #linked-projects.line= "Число связанных проектов: #{@source.projects.size}"
    %hr.line
    #params.line
        - unless @source.params.empty?
            %h5 Дополнительные параметры:
            %ul.params
                - @source.params.each do |name, value|
                    %li.param
                        %span.name= "#{name}:"
                        %span.value= value
        - else
            %span.info Отсутствуют